<script>
  function nextStep(current) {
    document.getElementById(`step${current}`).classList.remove('active');
    document.getElementById(`step${current + 1}`).classList.add('active');
  }

  function showResults() {
    const hobbies = [...document.querySelectorAll('input[name="hobby"]:checked')].map(cb => cb.value);
    const stores = [...document.querySelectorAll('input[name="store"]:checked')].map(cb => cb.value);
    const products = document.getElementById("products").value.toLowerCase();

    let gift = "a thoughtful gift card!";

    if (hobbies.includes("Art") && stores.includes("Michaels")) {
      gift = "an advanced sketch kit or paint set üé®";
    } else if (hobbies.includes("Fitness") && products.includes("protein")) {
      gift = "a high-quality gym bag with snacks üèãÔ∏è";
    } else if (hobbies.includes("Gaming") && stores.includes("GameStop")) {
      gift = "a wireless gaming headset üéß";
    } else if (hobbies.includes("Cooking") && stores.includes("Trader Joe's")) {
      gift = "a gourmet spice set or a cute apron üç≥";
    } else if (hobbies.includes("Reading") && stores.includes("Barnes & Noble")) {
      gift = "a cozy reading lamp and a bestselling novel üìö";
    } else if (hobbies.includes("Music") && products.includes("headphones")) {
      gift = "premium Bluetooth earbuds or a Spotify gift card üéµ";
    }

    document.getElementById("giftSuggestion").innerText = `We recommend ${gift}`;
    nextStep(3);
  }
</script>

